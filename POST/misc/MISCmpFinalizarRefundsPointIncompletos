/****o* Mercado Pago/OFB:post:MISCmpFinalizarRefundsPointIncompletos
* NOMBRE
*   OFB:post:MISCmpFinalizarRefundsPointIncompletos
* DESCRIPCION
*   Finaliza refunds Smart Point incompletos reutilizando el flujo de contingencias DEV
* SOURCE
*/
#include "postmisc.h"

SUB post:MISCmpFinalizarRefundsPointIncompletos
	LOCAL l_retval LIKE lib:err_retval
	LOCAL l_jnlok LIKE post:adt_opmp_jnlOK

	DPRINT "[DBG] MISCmpFinalizarRefundsPointIncompletos: inicio (best-effort) fecha=[%s] login=[%s] termi=[%s]\n" common:system_date op:op_login_id common:window_node

	//Proteccion: evita tocar otros pendientes DEV (ej. QRI)
	CDS SELECT FROM DSC:post:OperacionesMP_tbl BECOMES DSC:post:OperacionesMP_ctx \
		WHERE post:adt_opmp_fecha == common:system_date \
		&& post:adt_opmp_login_id == op:op_login_id \
		&& post:adt_opmp_termi_win == common:window_node \
		&& post:adt_opmp_operacion == "DEV" \
		&& post:adt_opmp_jnlOK == "N" \
		&& (post:adt_opmp_comandos != "POINT_REFUND_POST" || post:adt_opmp_codint_mp == "QRI")

	CDS FINDFIRST DSC:post:OperacionesMP_ctx NOLOCK
	IF (CDSRETVAL == 0) THEN
		DPRINT "[DBG] MISCmpFinalizarRefundsPointIncompletos: existe pendiente DEV no SmartPoint refund (o QRI). No ejecuto recovery para no mezclar casos.\n"
		CDS ENDSELECT DSC:post:OperacionesMP_ctx
		RETURN -2
	END IF
	CDS ENDSELECT DSC:post:OperacionesMP_ctx

	DPRINT "[DBG] MISCmpFinalizarRefundsPointIncompletos: voy a invocar MISCmpTipoCaida(DEV) para refund Smart Point incompleto.\n"
	CALL post:MISCmpTipoCaida("DEV")
	LET l_retval = RETVAL
	DPRINT "[DBG] MISCmpFinalizarRefundsPointIncompletos: retorno MISCmpTipoCaida RETVAL=[%d]\n" l_retval

	CDS SELECT FROM DSC:post:OperacionesMP_tbl BECOMES DSC:post:OperacionesMP_ctx \
		WHERE post:adt_opmp_fecha == common:system_date \
		&& post:adt_opmp_login_id == op:op_login_id \
		&& post:adt_opmp_termi_win == common:window_node \
		&& post:adt_opmp_operacion == "DEV" \
		&& post:adt_opmp_comandos == "POINT_REFUND_POST" \
		&& post:adt_opmp_codint_mp != "QRI"

	CDS FINDFIRST DSC:post:OperacionesMP_ctx NOLOCK
	IF (CDSRETVAL == 0) THEN
		CDS EXTRACT DSC:post:OperacionesMP_ctx post:adt_opmp_jnlOK INTO l_jnlok
		DPRINT "[DBG] MISCmpFinalizarRefundsPointIncompletos: estado posterior jnlOK=[%s] para refund Smart Point.\n" l_jnlok
	ELSE
		DPRINT "[DBG] MISCmpFinalizarRefundsPointIncompletos: no se encontro registro Smart Point post intento de recovery.\n"
	END IF
	CDS ENDSELECT DSC:post:OperacionesMP_ctx

	IF (l_retval < 0) THEN
		DPRINT "[DBG] MISCmpFinalizarRefundsPointIncompletos: fallo al finalizar refund (RETVAL=[%d]). Se devolvera error al hook para informar, pero sin abortar anulacion.\n" l_retval
		RETURN -2
	END IF

	RETURN 0

END SUB

/*******/
